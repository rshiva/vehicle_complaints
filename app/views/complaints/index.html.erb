<%- model_class = Complaint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:fly_destination) %></th>
      <th><%= model_class.human_attribute_name(:from_to_fly) %></th>
      <th><%= model_class.human_attribute_name(:excess_charged) %></th>
      <th><%= model_class.human_attribute_name(:indecent_behaviour) %></th>
      <th><%= model_class.human_attribute_name(:charged_and_allowed_other_complainant) %></th>
      <th><%= model_class.human_attribute_name(:charged_for_luggage) %></th>
      <th><%= model_class.human_attribute_name(:from_to_luggage) %></th>
      <th><%= model_class.human_attribute_name(:bus_stop_name) %></th>
      <th><%= model_class.human_attribute_name(:other_complaints) %></th>
      <th><%= model_class.human_attribute_name(:occurence_date_time) %></th>
      <th><%= model_class.human_attribute_name(:place_occurence) %></th>
      <th><%= model_class.human_attribute_name(:fault_no_working_meter) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
        <td><%= link_to complaint.id, complaint_path(complaint) %></td>
        <td><%= complaint.fly_destination %></td>
        <td><%= complaint.from_to_fly %></td>
        <td><%= complaint.excess_charged %></td>
        <td><%= complaint.indecent_behaviour %></td>
        <td><%= complaint.charged_and_allowed_other_complainant %></td>
        <td><%= complaint.charged_for_luggage %></td>
        <td><%= complaint.from_to_luggage %></td>
        <td><%= complaint.bus_stop_name %></td>
        <td><%= complaint.other_complaints %></td>
        <td><%= complaint.occurence_date_time %></td>
        <td><%= complaint.place_occurence %></td>
        <td><%= complaint.fault_no_working_meter %></td>
        <td><%=l complaint.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_complaint_path(complaint), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      complaint_path(complaint),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_complaint_path,
            :class => 'btn btn-primary' %>
