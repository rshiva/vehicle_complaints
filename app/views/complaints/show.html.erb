<%- model_class = Complaint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fly_destination) %>:</strong></dt>
  <dd><%= @complaint.fly_destination %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from_to_fly) %>:</strong></dt>
  <dd><%= @complaint.from_to_fly %></dd>
  <dt><strong><%= model_class.human_attribute_name(:excess_charged) %>:</strong></dt>
  <dd><%= @complaint.excess_charged %></dd>
  <dt><strong><%= model_class.human_attribute_name(:indecent_behaviour) %>:</strong></dt>
  <dd><%= @complaint.indecent_behaviour %></dd>
  <dt><strong><%= model_class.human_attribute_name(:charged_and_allowed_other_complainant) %>:</strong></dt>
  <dd><%= @complaint.charged_and_allowed_other_complainant %></dd>
  <dt><strong><%= model_class.human_attribute_name(:charged_for_luggage) %>:</strong></dt>
  <dd><%= @complaint.charged_for_luggage %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from_to_luggage) %>:</strong></dt>
  <dd><%= @complaint.from_to_luggage %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bus_stop_name) %>:</strong></dt>
  <dd><%= @complaint.bus_stop_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:other_complaints) %>:</strong></dt>
  <dd><%= @complaint.other_complaints %></dd>
  <dt><strong><%= model_class.human_attribute_name(:occurence_date_time) %>:</strong></dt>
  <dd><%= @complaint.occurence_date_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:place_occurence) %>:</strong></dt>
  <dd><%= @complaint.place_occurence %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fault_no_working_meter) %>:</strong></dt>
  <dd><%= @complaint.fault_no_working_meter %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              complaints_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_complaint_path(@complaint), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              complaint_path(@complaint),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
